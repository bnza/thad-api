<?xml version="1.0" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Vocabulary\Period" table="voc__period">
        <unique-constraints>
            <unique-constraint columns="value" />
            <unique-constraint columns="code" />
        </unique-constraints>
        <id name="id" type="smallint">
            <generator/>
        </id>
        <field name="code"/>
        <field name="value"/>
        <field name="description" type="text" nullable="true"/>
        <one-to-many field="subPeriods" target-entity="App\Entity\Vocabulary\Period" mapped-by="parent" />
        <many-to-one field="parent" target-entity="App\Entity\Vocabulary\Period" inversed-by="subPeriods">
            <join-column name="parent_id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
